<% layout("/layouts/boilerplate") %>
<body>
  <% if (typeof listing !== "undefined" && listing) { %>
    <div class="row mt-3">
      <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
      </div>

      <div class="card listing-card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <%= listing.description %> <br>
            â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
          </p>
        </div>
      </div>

      <br>

      <div class="btns mb-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
          <button class="btn btn-dark offset-5">Delete</button>
        </form>
      </div>
      <div class="col-8 offset-3">
      <hr>
      <h4>Leave a review</h4>
      <form class="mb-4 needs-validation" 
        action="/listings/<%= listing._id%>/reviews" 
        method="post" 
        novalidate
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comments" class="form-label">Comments</label>
          <textarea 
            name="review[comment]" 
            id="comment" 
            cols="38" 
            rows="5" 
            class="form-control" 
            required
            ></textarea>
            <div class="invalid-feedback">Please add some comment for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button> 
      </form>

      <hr>

      <p><b>All Reviews</b></p>
      <div class="row">
      <%for(review of listing.reviews){%>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">Emma watson</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %></p>
          </div>
          <form class="mb-3 mt-1" method="post" action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        <%}%>
    </div>
    </div>
  <% } else { %>
    <div class="alert alert-danger text-center mt-5">
      Listing not found or has been deleted.
    </div>
  <% } %>
</body>
